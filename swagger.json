              "type": "string",
              "enum": ["ASC", "DESC"],
              "default": "ASC"
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "description": "Page number of the results to fetch.",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "pageSize",
            "in": "query",
