          }
        }
      }
    },
    "/api/news/all": {
      "get": {
        "tags": ["News"],
        "summary": "Retrieve all news articles",
        "description": "Returns an array of all news articles available in the database.",
        "responses": {
          "200": {
            "description": "A list of news articles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewsArray"
                }
              }
            }
          },
          "404": {
            "description": "No news articles found"
          },
          "500": {
            "description": "Server error occurred while retrieving news articles"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Coin": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "6571e5c260e78d6ce2533e5e"
          },
          "id": {
            "type": "string",
            "example": "tether"
          },
          "symbol": {
            "type": "string",
            "example": "usdt"
          },
          "name": {
            "type": "string",
            "example": "Tether"
          },
          "image": {
            "type": "string",
            "example": "https://assets.coingecko.comapi/coins/images/325/large/Tether.png?1696501661"
          },
          "current_price": {
            "type": "number",
            "example": 1.001
          },
          "market_cap": {
            "type": "integer",
            "example": 90126191309
          },
          "market_cap_rank": {
            "type": "integer",
            "example": 3
          },
          "fully_diluted_valuation": {
            "type": "integer",
            "example": 90126191309
          },
          "total_volume": {
            "type": "integer",
            "example": 43437813167
          },
          "high_24h": {
            "type": "number",
            "example": 1.002
          },
          "low_24h": {
            "type": "number",
            "example": 0.996412
          },
          "price_change_24h": {
            "type": "number",
            "example": 0.00163016
          },
          "price_change_percentage_24h": {
            "type": "number",
            "example": 0.16304
          },
          "market_cap_change_24h": {
            "type": "integer",
            "example": 229067142
          },
          "market_cap_change_percentage_24h": {
            "type": "number",
            "example": 0.25481
          },
          "circulating_supply": {
            "type": "number",
            "example": 90068084199.1356
          },
          "total_supply": {
            "type": "number",
            "example": 90068084199.1356
          },
          "max_supply": {
            "type": "number",
            "nullable": true,
            "example": null
          },
          "ath": {
            "type": "number",
            "example": 1.32
          },
          "ath_change_percentage": {
            "type": "number",
            "example": -24.37089
          },
          "ath_date": {
            "type": "string",
            "example": "2018-07-24T00:00:00.000Z"
          },
          "atl": {
            "type": "number",
            "example": 0.572521
          },
          "atl_change_percentage": {
            "type": "number",
            "example": 74.77877
          },
          "atl_date": {
            "type": "string",
            "example": "2015-03-02T00:00:00.000Z"
          },
          "last_updated": {
            "type": "string",
            "example": "2023-12-07T15:25:00.368Z"
          },
          "price_change_percentage_1h_in_currency": {
            "type": "number",
            "example": 0.07672511681678976
          },
          "price_change_percentage_24h_in_currency": {
            "type": "number",
            "example": 0.16303867684302603
          },
          "price_change_percentage_7d_in_currency": {
            "type": "number",
            "example": 0.08717091903398581
          },
          "__v": {
            "type": "integer",
            "example": 0
          }
        }
      },
      "CoinsArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Coin"
        }
      },
      "NewsArticle": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "example": "https://res.cloudinary.com/dxgv5a6mt/image/upload/v1712050609/Cryptozen/qp94eqn1jomyx336c72y.jpg"
          },
          "title": {
            "type": "string",
            "example": "Bitcoin Mining"
          },
          "text": {
            "type": "string",
            "example": "Dive into the world of decentralized ledger technology and learn how Bitcoin mining is reshaping the future of financial transactions."
          }
        }
      },
      "NewsArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/NewsArticle"
        }
      }
    }
  }
}
