            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with a sorted list of coins",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CoinsArray"
                }
              }
            }
          },
          "400": {
            "description": "Bad request, for example, incorrect sorting value"
          },
